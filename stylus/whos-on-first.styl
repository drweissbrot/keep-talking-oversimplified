body .whos-on-first {
	display flex
	justify-content space-around

	.table {
		&:first-of-type {
			max-width 20rem

			.row {
				display grid
				grid-template-columns 1fr 1fr
			}
		}

		&:last-child {
			max-width 120rem

			.row {
				display grid
				grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr
			}
		}
	}
}
