.bold {
	font-weight 700
}

.italic {
	font-style italic
}

.red {
	color $red
}

.blue {
	color $blue
}

.white {
	color #fff
}

.yellow {
	color $yellow
}

.green {
	color $green
}

.black {
	color #000
	text-shadow: 0px 0px 8px #fff;
	overflow hidden
}

.mono {
	font-family $mono
}

h2 {
	position absolute
	clip rect(0, 0, 0, 0)
	white-space nowrap
	border 0
}
